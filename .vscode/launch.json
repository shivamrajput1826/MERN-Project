    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/frontend/src/services/authService.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "command":"yarn start:dev",
            "name":"Run backend",
            "request": "launch",
            "webRoot":"${workspaceFolder}"
        },
        {
            "command":"yarn dev",
            "name":"Run frontend",
            "request": "launch",
            "webRoot":"${workspaceFolder}"
        }
    ]
}